{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "utcode-chat-app",
  "version": "0.1.0",
  "identifier": "com.utcode-chat-app.app",
  "build": {
    "beforeDevCommand": "bun run vite dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run vite build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "UtCode Chat App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
